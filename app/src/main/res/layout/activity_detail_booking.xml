<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DetailBooking">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize">

                <ImageView
                    android:id="@+id/backToMenuLainnya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="15dp"
                    android:src="@drawable/baseline_arrow_back_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppingbold"
                    android:text="Detail Booking"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail Paket"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="10dp"
                        app:cardUseCompatPadding="true">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/brosurpaket"
                            android:scaleType="centerCrop"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="5dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp">
                        <TextView
                            android:id="@+id/judulPaket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paket Umroh 28 November 2023"
                            android:fontFamily="@font/poppingbold"
                            android:textColor="@color/black"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/iconcalender"
                                android:layout_gravity="center"/>
                            <TextView
                                android:id="@+id/tanggalBerangkat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="28 November 2023"
                                android:textSize="8sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppinslight"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginVertical="5dp">
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/iconjam"
                                android:layout_gravity="center"/>
                            <TextView
                                android:id="@+id/waktuPaket"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12 Hari"
                                android:textSize="8sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppinslight"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/iconhotel"
                                android:layout_gravity="center"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="⭐"
                                android:textSize="8sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppinslight"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"/>
                            <TextView
                                android:id="@+id/rateHotel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:textSize="8sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppinslight"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/hargaPaket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp30.000.000"
                            android:textSize="10sp"
                            android:fontFamily="@font/poppinssemibold"
                            android:textColor="@color/red"
                            android:layout_marginTop="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail Jamaah"
                    android:fontFamily="@font/poppinssemibold"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/btn_add"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_add_24"/>

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycleDetailJamaah"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kode Referral Agen"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:background="@color/abuabu"
                android:layout_marginHorizontal="20dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppinsmedium"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:hint="Masukkan kode referral Agen disini"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rincian Biaya"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Biaya"
                    android:fontFamily="@font/poppinsmedium"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp-"
                    android:fontFamily="@font/poppinsmedium"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:fontFamily="@font/poppinsmedium"
                android:text="*Harga sudah termasuk lain - lain termasuk harga kurs saat ini"
                android:layout_marginLeft="20dp"/>

            <Button
                android:id="@+id/btn_booking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:text="Booking"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="12sp"
                android:backgroundTint="@color/redOrange"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>