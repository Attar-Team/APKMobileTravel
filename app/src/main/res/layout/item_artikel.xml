<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:elevation="10dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingVertical="15dp"
            android:paddingHorizontal="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/judulArtikel"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:text="Jamaah Haji Indonesia Baru Saja Tiba di Indonesia"
                    android:fontFamily="@font/poppingbold"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:paddingRight="10dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="4dp"
                    app:cardUseCompatPadding="true"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/gambarArtikel"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/fotokabah"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tanggalPosting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 Oktober 2023"
                    android:fontFamily="@font/poppinssemibold"
                    android:textSize="10sp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:fontFamily="@font/poppingbold"
                    android:textColor="@color/black"
                    android:layout_marginRight="5dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/deskripsiArtikel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hari ini tanggal 13 Juni 2023 beberapa jamaah haji sudah tiba di tanah suci Madinah. Kedatangan jamaah haji di Indonesia disambut meriah"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:fontFamily="@font/poppinsmedium"
                android:ellipsize="end"
                android:maxLines="2"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>