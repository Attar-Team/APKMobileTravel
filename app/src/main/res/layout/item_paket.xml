<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="170dp"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true">
            <ImageView
                android:id="@+id/brosurPaket"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/brosurpaket"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp">
            <TextView
                android:id="@+id/judulPaket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paket Umroh 28 November 2023"
                android:fontFamily="@font/poppingbold"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/iconcalender"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tanggalBerangkat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28 November 2023"
                    android:textSize="8sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinslight"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="5dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/iconjam"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/waktuPaket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 Hari"
                    android:textSize="8sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinslight"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/iconhotel"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⭐"
                    android:textSize="8sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinslight"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:id="@+id/rateHotel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="8sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinslight"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/hargaPaket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp30.000.000"
                android:textSize="10sp"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/red"
                android:layout_marginTop="5dp"/>


        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>