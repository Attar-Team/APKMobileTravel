<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity"
    android:background="@drawable/bgregister"
    android:gravity="center_vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textSize="40dp"
                android:fontFamily="@font/poppingbold"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daftar untuk akses semua fitur !"
                android:textSize="14dp"
                android:layout_marginTop="-12dp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bgcard3"
                android:gravity="center_vertical">
                <EditText
                    android:id="@+id/txt_nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Lengkap"
                    android:background="@null"
                    android:layout_marginHorizontal="25dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsmedium"
                    android:paddingVertical="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bgcard3"
                android:gravity="center_vertical">
                <EditText
                    android:id="@+id/txt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:background="@null"
                    android:layout_marginHorizontal="25dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsmedium"
                    android:paddingVertical="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bgcard3"
                android:gravity="center_vertical">
                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:background="@null"
                    android:layout_marginHorizontal="25dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsmedium"
                    android:inputType="textPassword"
                    android:paddingVertical="10dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*Password minimal 8 kata"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/red"
                android:textSize="10dp"
                android:layout_marginLeft="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bgcard3"
                android:gravity="center_vertical">
                <EditText
                    android:id="@+id/re_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Re Password"
                    android:background="@null"
                    android:layout_marginHorizontal="25dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsmedium"
                    android:inputType="textPassword"
                    android:paddingVertical="10dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/errorMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingHorizontal="10dp"
                android:textSize="10dp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/red"
               />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bgcard3"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/txt_hobby"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:background="@null"
                    android:fontFamily="@font/poppinsmedium"
                    android:hint="Hobby"
                    android:paddingVertical="10dp"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:elevation="10dp"
                android:foreground="@drawable/cardview_selector">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/linear_gradient"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Register"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppingbold"
                        android:layout_marginHorizontal="20dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/google"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue with Google"
                    android:textSize="13sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinssemibold"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">
                <TextView
                    android:id="@+id/belumPunyaAkun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sudah Punya Akun?"
                    android:textSize="13sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppingbold"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>