<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true">
                <ImageView
                    android:id="@+id/brosurPaket"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/brosurpaket"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/judulPaket"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:text="Paket Umroh 28 Nov 2023"
                android:paddingHorizontal="5dp"
                android:fontFamily="@font/poppingbold"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/iconcalender"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tanggalBerangkat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28 November 2023"
                    android:textSize="8sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinslight"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="5dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/iconjam"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/waktuPaket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 Hari"
                    android:textSize="8sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinslight"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/iconplane"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/rateHotel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Belum Berangkat"
                    android:textSize="8sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinslight"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/hargaPaket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp30.000.000"
                android:textSize="10sp"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/red"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>