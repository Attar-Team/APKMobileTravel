<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TabLayoutTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppinssemibold</item>
    </style>

    <style name="TitleNavBar">
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">10sp</item>
        <item name="android:textColorHint">@color/abuabu</item>
        <item name="android:fontFamily">@font/poppinsmedium</item>
    </style>
    <style name="SearchView" parent="">
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/abuabu</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <!-- Tint color (highlight color) when focused -->
        <item name="colorControlActivated">@color/redOrange</item>

        <!-- Text color -->
        <item name="android:textColor">@color/black</item>

        <!-- Hint color -->
        <item name="android:textColorHint">@color/orangeLight</item>

        <!-- Background color -->
        <item name="android:background">@drawable/edittext_background</item>

        <!-- Padding -->
        <item name="android:padding">8dp</item>
    </style>
    <style name="typoBig">
        <item name="fontFamily">@font/barlow_semi_bold</item>
        <item name="fontStyle">normal</item>
        <item name="android:textSize">24dp</item>
    </style>
    <style name="typoMiddle">
        <item name="fontFamily">@font/barlow_medium</item>
        <item name="fontStyle">normal</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="typoMiddleBold">
        <item name="fontFamily">@font/barlow_semi_bold</item>
        <item name="fontStyle">normal</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="typoSmall">
        <item name="fontFamily">@font/barlow_light</item>
        <item name="fontStyle">normal</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="typoSmallBold">
        <item name="fontFamily">@font/barlow_semi_bold</item>
        <item name="fontStyle">normal</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="typoNormal">
        <item name="fontFamily">@font/barlow_regular</item>
        <item name="fontStyle">normal</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="typoNormalBold">
        <item name="fontFamily">@font/barlow_semi_bold</item>
        <item name="fontStyle">normal</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!--   Bottom sheet dialog -->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>