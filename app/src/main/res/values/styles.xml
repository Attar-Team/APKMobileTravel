<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TabLayoutTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppinssemibold</item>
    </style>

    <style name="TitleNavBar">
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">10sp</item>
        <item name="android:textColorHint">@color/abuabu</item>
        <item name="android:fontFamily">@font/poppinsmedium</item>
    </style>
    <style name="SearchView" parent="">
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/abuabu</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <!-- Tint color (highlight color) when focused -->
        <item name="colorControlActivated">@color/redOrange</item>

        <!-- Text color -->
        <item name="android:textColor">@color/black</item>

        <!-- Hint color -->
        <item name="android:textColorHint">@color/orangeLight</item>

        <!-- Background color -->
        <item name="android:background">@drawable/edittext_background</item>

        <!-- Padding -->
        <item name="android:padding">8dp</item>
    </style>

</resources>